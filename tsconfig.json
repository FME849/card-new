{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react-native",
		"moduleResolution": "node",
		"noEmit": true,
		"strict": true,
		"target": "esnext",
		"baseUrl": ".",
		"paths": {
			"components/*": ["./launcher/components/*"],
			"stacks/*": ["./launcher/stacks/*"],
			"screens/*": ["./launcher/screens/*"],
			"utils/*": ["./launcher/utils/*"]
		}
	},
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	],
	"include": [
		"index.js",
		"src",
		"src/utils/global.d.ts"
	]
}
